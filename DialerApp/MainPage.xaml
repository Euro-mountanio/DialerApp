<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DialerApp.MainPage">
    <VerticalStackLayout Spacing="15" Padding="20" BackgroundColor="Transparent">
            <Label Text="Enter phone Number " FontSize="20" HorizontalOptions="Center"/>
            <Entry x:Name="PhoneNumberText" Text=" 260"  HorizontalTextAlignment="Center"/>
            <Button x:Name="TranslateButton"
                    Text="Translate "
                    Clicked="OnTranslate"
                    />
            <Button x:Name="CallButton"
               Text="Call "
               Clicked="OnCall"
              />

    </VerticalStackLayout>
 </ContentPage>

    